<div class="section has-background-dark has-text-white" style="border-radius: 100px;">

  <section class="hero is-link has-background-dark has-text-white" style="border-radius: inherit">
	  <div class="hero-head">
	  	<p class="title" style="padding:55px;"">
			  <%= @article.title %>
			</p>
			<p class='subtitle' style="padding:55px;text-align: justify">
  			<%= @article.text %>
			</p>
	  </div>
	  <div class="hero-body">
	  	<hr>
	  	<h1><center>
	  		Komentarze (<%= @article.comments.count %>)
	  	</center></h1>
	  	<hr>
	    <%= render 'comments/comments' %>
	    <hr>
	  	<%= render 'comments/form' %>
	  </div>
	</section>

	<%= link_to 'Edit', edit_article_path(@article) %> |
	<%= link_to 'Back', articles_path %>
</div>