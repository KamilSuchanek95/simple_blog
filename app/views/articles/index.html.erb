<% @articles.each do |article| %>

  <div class="box" style="background: rgba(0, 0, 0, 0.85); border-radius: 50px; padding:25px">
    <a class="has-text-white title is-4" href="<%= article_path(article) %>"><%= article.title %></a>
    <div>
      <a class="subtitle is-6"><%= article.text[0..100] %>...</a>
    </div>
    <p>_________________</p>
    <p>
      <%= link_to 'Show', article, :style=> 'color:#FFFFFF;' %> |
      <%= link_to 'Edit', edit_article_path(article), :style=> 'color:#FFFFFF;' %> |
      <%= link_to 'Remove', article, method: :delete, data: { confirm: 'Are you sure?' }, :style=> 'color:#FFFFFF;' %>
    </p>
  </div>

<% end %>