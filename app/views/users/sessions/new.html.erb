<div class="box has-text-white" style="background: rgba(0, 0, 0, 0.85); border-radius: 50px; padding:25px">
  <center>
    <p class="title has-text-white">Log in</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login, class:"label has-text-white" %><br />
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class:"input",type:"text" %>
      </div><br />

      <div class="field">
        <%= f.label :password, class:"label has-text-white" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"input",type:"password" %>
      </div><br />

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class:"checkbox has-text-white" %>
          <%= f.label :remember_me,class:"checkbox" %>
        </div>
      <% end %><br />

      <div class="actions">
        <%= f.submit "Log in", class:"button is-success is-outlined" %>
      </div><br />
    <% end %>

    <%= render "devise/shared/links" %>
  </center>
</div>