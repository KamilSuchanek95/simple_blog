<div class="box has-text-white" style="background: rgba(0, 0, 0, 0.85); border-radius: 50px; padding:25px">
  <center>
    <p class="title has-text-white">Change your password</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password", class:"label has-text-white" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"input",type:"password" %>
      </div><br />

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class:"label has-text-white" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input",type:"password" %>
      </div><br />

      <div class="actions">
        <%= f.submit "Change my password", class:'button is-warning is-outlined' %>
      </div><br />
    <% end %>

    <%= render "devise/shared/links" %>
  </center>
</div>